@model IEnumerable<Race>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (Race item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image.ToString()" alt="@item.Title">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id">View</a>
                                    
                                    @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    }

                                </div>
                                <small class="text-muted">@item.RaceCategory.ToString()</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>